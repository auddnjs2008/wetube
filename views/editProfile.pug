extends layouts/main.pug

block content
    .form-container
        form(action=`/users/${routes.editProfile}`,method="post",enctype="multipart/form-data")
            .fileUpload
                label(for="avatar") Avatar
                input(type="file",id="avatar",name="avatar", accept="image/*")
            input(type="text",placeholder="Name" name="name", value=logedUser.name)
            input(type="email",placeholder="Email" name="email",value = logedUser.email)
            input(type="submit",value="Update Profile")
        